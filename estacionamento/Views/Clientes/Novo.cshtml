@model estacionamento.Models.Cliente

@{
    ViewData["Title"] = "Incluir Cliente";
}

<div class="text-center">
    <h1 class="display-4">Novo cliente</h1>
</div>

<div class="text-left">
    <!-- Formulário Razor -->
        <form asp-action="Criar" app-controller="Clientes" method="post">

            <div class="mb-3">
                <label for="Nome" class="form-label">Nome</label>
                <input type="text" id="Nome" asp-for="Nome" class="form-control" required/>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="Cpf" class="form-label">CPF</label>
                <input type="text" id="Cpf" asp-for="Cpf" class="form-control" required/>  
                <span asp-validation-for="Cpf" class="text-danger"></span>     
            </div>
            <br>
            <button type="submit" class="btn btn-primary">Salvar</button>
        </form>
</div>
<!-- Scripts do Bootstrap e validação do formulário -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
