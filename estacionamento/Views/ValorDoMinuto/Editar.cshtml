@model estacionamento.Models.ValorDoMinuto

@{
    ViewData["Title"] = "Editar Valor do Minuto";
}

<div class="text-center">
    <h1 class="display-4">Editando valor</h1>
</div>

<div class="text-left">
    <!-- Formulário Razor -->
        <form asp-action="Alterar" app-controller="ValorDoMinuto" asp-route-id="@Model.Id" method="post">

            <div class="mb-3">
                <label for="Minutos" class="form-label">Minutos</label>
                <input type="number" asp-for="Minutos" class="form-control" value="@Model.Minutos" required />
                <span asp-validation-for="Minutos" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="Valor" class="form-label">Valor</label>
                <input type="number" asp-for="Valor" step="0.01" class="form-control" value="@Model.Valor" required />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <br>
            <button type="submit" class="btn btn-primary">Salvar</button>
        </form>
</div>
<!-- Scripts do Bootstrap e validação do formulário -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
