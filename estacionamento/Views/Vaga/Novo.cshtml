@model estacionamento.Models.Vaga

@{
    ViewData["Title"] = "Incluir Vaga";
}

<div class="text-center">
    <h1 class="display-4">Nova vaga</h1>
</div>

<div class="text-left">
    <!-- Formulário Razor -->
        <form asp-action="Criar" app-controller="Vaga" method="post">

            <div class="mb-3">
                <label for="CodigoLocalizacao" class="form-label">Codigo localização</label>
                <input type="text" asp-for="CodigoLocalizacao" class="form-control" required />
                <span asp-validation-for="CodigoLocalizacao" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="Ocupada" class="form-label">Ocupada</label>
                <input type="text" asp-for="Ocupada" step="0.01" class="form-control" required />
                <span asp-validation-for="Ocupada" class="text-danger"></span>
            </div>
            <br>
            <button type="submit" class="btn btn-primary">Salvar</button>
        </form>
</div>
<!-- Scripts do Bootstrap e validação do formulário -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
